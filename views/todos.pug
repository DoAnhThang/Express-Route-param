h1 Todos list

h2 Search

form(method="GET")
  input(type="text", name="q", value=q)
  button Search


ul
  each todo in todos
    li
    span=todo.text
    span &nbsp;
    a(href='todos/' + todo.id + "/delete") delete

h2 Create
form(action="/todos/create", method="POST")
  lable Todo:
  br
  input(type="text", name="text")
  button create

